# Database (Supabase PostgreSQL)
# Runtime (serverless): Transaction pooler (port 6543)
DATABASE_URL="postgresql://postgres.[YOUR-PROJECT-REF]:[URL-ENCODED-PASSWORD]@aws-1-[YOUR-REGION].pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=10"
# Prisma CLI / migrations: Session pooler (port 5432)
DIRECT_URL="postgresql://postgres.[YOUR-PROJECT-REF]:[URL-ENCODED-PASSWORD]@aws-1-[YOUR-REGION].pooler.supabase.com:5432/postgres"
# Optional: force Prisma runtime to use DIRECT_URL (recommended for non-serverless deployments)
PRISMA_USE_DIRECT_URL="false"

# NextAuth
NEXTAUTH_URL="http://localhost:3800"
NEXTAUTH_SECRET="generate-with: openssl rand -base64 32"

# OAuth Providers (optional)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# LLM Integration (optional)
ANTHROPIC_API_KEY=""

# Slack Integration (optional)
# Create a Slack app and install it once to your workspace (bot token starts with xoxb-)
# Required scopes: users:read, channels:read, groups:read, chat:write
SLACK_BOT_TOKEN=""
# Slack OAuth login (optional)
# From Slack app > OAuth & Permissions. Add redirect URI:
# http://localhost:3800/api/auth/callback/slack
SLACK_CLIENT_ID=""
SLACK_CLIENT_SECRET=""
# Set true to require Slack SSO and hide credentials login
AUTH_REQUIRE_SLACK="false"
# Client-side login page toggles
NEXT_PUBLIC_SLACK_AUTH_ENABLED="false"
NEXT_PUBLIC_AUTH_REQUIRE_SLACK="false"

# File Storage - Cloudflare R2 (optional, falls back to local storage)
# Generate R2 API token at: Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME=""
R2_PUBLIC_URL=""

# App Settings
NODE_ENV="development"

# Cron security (used by /api/cron/release-staged-tasks)
CRON_SECRET=""
